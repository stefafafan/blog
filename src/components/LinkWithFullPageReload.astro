---
import { cn } from '@/lib/utils'

type Props = {
  href: string
  external?: boolean
  class?: string
  underline?: boolean
  [key: string]: any
}

const { href, external, class: className, underline, ...rest } = Astro.props
---

<!-- ref: https://docs.astro.build/en/guides/view-transitions/#preventing-client-side-navigation -->
<a
  href={href}
  target={external ? '_blank' : '_self'}
  data-astro-reload
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline &&
      'underline decoration-muted-foreground underline-offset-[3px] hover:decoration-foreground',
    className,
  )}
  {...rest}
>
  <slot />
</a>
